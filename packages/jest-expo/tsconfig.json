{
  "extends": "../../tsconfig.node",
  "include": ["./src"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*"],
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "composite": false,
  }
}
