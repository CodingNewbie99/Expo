#!/usr/bin/env node
'use strict';

const path = require('path');
const { commandRunner, getArgs } = require("../util/commandUtils");

let args = getArgs();

if (args[0] === 'plugin') {
  args = ['plugin/src', ...args.splice(1)];
} else {
  args = ['src', ...args];
}

commandRunner(path.join(__dirname, 'expo-module-eslint'), args);