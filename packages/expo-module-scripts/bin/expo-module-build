#!/usr/bin/env node
'use strict';

const path = require('path');
const { commandRunner, getArgs } = require("../util/commandUtils");

let args = getArgs();

if (args[0] === 'plugin') {
  const pluginDir = path.join(process.cwd(), 'plugin');
  args = ['-p', pluginDir, ...args.splice(1)]
}

commandRunner(path.join(__dirname, 'expo-module-tsc'), args);